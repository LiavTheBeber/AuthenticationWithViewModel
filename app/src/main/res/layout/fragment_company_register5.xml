<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E1F5FE">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="        Almost Done!\nOnly one thing left to do!"
        android:textSize="24dp" />
    <TextView
        android:id="@+id/terms_of_service_text"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:text="@string/termsAndService"
        android:background="@drawable/textinputedge"
        android:padding="8dp" />

    <CheckBox
        android:id="@+id/checkbox_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="I've read and accept the terms of service" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFinish"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="finish"
        android:textSize="18dp"
        android:background="@drawable/addinfoshape" />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/floatbackarrow"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnProceed"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/floatactionbuttonshape"/>
    </LinearLayout>


</LinearLayout>